@model List<SystemAdmin.UI.Models.get_abonos_Result>
@{ ViewBag.Title = "Abonos";
    Layout = "~/Views/Layouts/Layout.cshtml"; }


<link href="~/lib/twitter-bootstrap/css/bootstrap.css" rel="stylesheet" />

<div class="row row-cols-1 row-cols-md-5 g-4">
    <!--foreach clientes-->
    @foreach (var oELemento in Model)
    {
        <div class="col">
            <div class="card">
                <img class="card-img-top" src="~/Assets/img/Abono.png" alt="Card image cap">
                <div class="card-body">

                    <h5 class="card-title">@oELemento.codigo</h5>
                    <p class="card-text">@oELemento.fecha</p>
                    <p class="card-text">@oELemento.monto</p>
                    <p class="card-text">@oELemento.idMetodoPago</p>
                    <p class="card-text">@oELemento.cedula</p>
                    <p class="card-text">@oELemento.idFactura</p>

                    <a class="btn btn-secondary btn-lg" href="/Abono/Editar" role="button">Editar</a>
                    <button type="button" class="btn btn-danger btn-lg">Borrar</button>
                </div>
            </div>
        </div>

    }

</div>
