
@{ ViewBag.Title = "Crear Abono";
                Layout = "~/Views/Layouts/Layout.cshtml"; }

<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
            </header>
            <div class="panel-body">
                <form class="form-horizontal " method="get">
                    <div class="form-group">
                        <label class="col-sm-2 control-label">ID</label>
                        <div class="col-sm-2">
                            <input type="number" class="form-control round-input">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label">Fecha</label>
                        <div class="col-sm-5">
                            <input type="date" class="form-control round-input">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label">Monto</label>
                        <div class="col-sm-2">
                            <input type="number" class="form-control round-input">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label">Metodo de pago (ID)</label>
                        <div class="col-sm-5">
                            <input type="number" class="form-control round-input">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label">Cedula cliente</label>
                        <div class="col-sm-5">
                            <input type="number" class="form-control round-input">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label">Factura (ID)</label>
                        <div class="col-sm-5">
                            <input type="number" class="form-control round-input">
                        </div>
                    </div>
                </form>
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
        </section>
    </div>
</div> 