
@{
    ViewBag.Title = "Crear Cuenta Por Cobrar";
    Layout = "~/Views/Layouts/Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
            </header>
            <div class="panel-body">
                <form class="form-horizontal " method="get">
                    <div class="form-group">
                        <label class="col-sm-2 control-label">ID</label>
                        <div class="col-sm-2">
                            <input type="number" class="form-control round-input">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label">Cedula</label>
                        <div class="col-sm-5">
                            <input type="number" class="form-control round-input">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label">Factura</label>
                        <div class="col-sm-5">
                            <input type="number" class="form-control round-input">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label">Vencimiento</label>
                        <div class="col-sm-5">
                            <input type="number" class="form-control round-input">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label">Plazo</label>
                        <div class="col-sm-5">
                            <input type="number" class="form-control round-input">
                        </div>
                    </div>

                </form>
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
        </section>
    </div>
</div>
