
@{
    ViewBag.Title = "Crear Factura";
    Layout = "~/Views/Layouts/Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
            </header>
            <div class="panel-body">
                <form class="form-horizontal " method="get">

                    <div class="form-group">
                        <label class="col-sm-2 control-label">ID</label>
                        <div class="col-sm-2">
                            <input type="number" class="form-control round-input">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label">Fecha</label>
                        <div class="col-sm-5">
                            <input type="date" class="form-control round-input">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label">Monto bruto</label>
                        <div class="col-sm-5">
                            <input type="number" class="form-control round-input">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label">Monto descuento</label>
                        <div class="col-sm-5">
                            <input type="number" class="form-control round-input">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label">Monto impuesto</label>
                        <div class="col-sm-5">
                            <input type="number" class="form-control round-input">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label">Monto neto</label>
                        <div class="col-sm-5">
                            <input type="number" class="form-control round-input">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label">Notas</label>
                        <div class="col-sm-5">
                            <input type="text" class="form-control round-input">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label">Cedula del cliente</label>
                        <div class="col-sm-5">
                            <input type="number" class="form-control round-input">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label">ID (sucursal)</label>
                        <div class="col-sm-5">
                            <input type="number" class="form-control round-input">
                        </div>
                    </div>
                    <label class="control-label col-lg-2">Tipo</label>
                    <div class="col-lg-5">
                        <select class="form-control round-input input-lg m-bot15">
                            <option>Credito</option>
                            <option>Contado</option>
                        </select>
                    </div>


                </form>
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
        </section>
    </div>
</div>