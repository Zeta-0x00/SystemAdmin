
@{
    ViewBag.Title = "Crear Cliente";
    Layout = "~/Views/Layouts/Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
            </header>
            <div class="panel-body">
                <form class="form-horizontal " method="get">
                    <div class="form-group">
                        <label class="col-sm-2 control-label">Cédula</label>
                        <div class="col-sm-2">
                            <input type="number" class="form-control round-input">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label">Nombre</label>
                        <div class="col-sm-5">
                            <input type="text" class="form-control round-input">
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-2 control-label">Teléfono</label>
                        <div class="col-sm-2">
                            <input type="number" class="form-control round-input">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label">Correo Electrónico</label>
                        <div class="col-sm-5">
                            <input type="email" class="form-control round-input">
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-2 control-label">Dirección Exácta</label>
                        <div class="col-sm-5">
                            <input type="text" class="form-control round-input">
                        </div>
                    </div>
                    <label class="control-label col-lg-2">Distrito</label>
                    <div class="col-lg-5">
                        <select class="form-control round-input input-lg m-bot15">
                            <option>Oriental</option>
                            <option>Option 2</option>
                            <option>Option 3</option>
                        </select>
                    </div>
                </form>
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
        </section>
    </div>
</div> 

